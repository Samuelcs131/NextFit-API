// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js" 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lastName String
  email String @unique
  height Int
  password String
  bodyMeasurement BodyMeasurement[]
  training Training[]
}

model BodyMeasurement {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  data DateTime 
  weight Int 
  rightArm Int
  leftArm Int
  rightThigh Int
  leftThigh Int
  rightForearm Int
  leftForearm Int
  breastplate Int
  abdomen Int
  gluteal Int
  rightCalf Int
  leftCalf Int
  deltoid Int
  createAt DateTime @default(now())
}

model Training {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  data DateTime
  name String
  series Int
  repetitions String
  weight Int
}
