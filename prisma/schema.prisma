// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js" 
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  lastName String
  email String @unique
  height Float
  weight Int
  sex String
  password String
  passwordResetToken String
  passwordResetExpires DateTime
  bodyMeasurement BodyMeasurements[]
  training Training[]
}

model Muscles {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  members String
  exercises Exercises[]
}

model Exercises {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  muscle Muscles @relation(fields: [muscleId], references: [id])
  muscleId String @db.ObjectId
  name String @unique
  img String
  training Training[]
}

model BodyMeasurements {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  date DateTime 
  weight Float 
  rightArm Float
  leftArm Float
  rightThigh Float
  leftThigh Float
  rightForearm Float
  leftForearm Float
  breastplate Float
  abdomen Float
  gluteal Float
  rightCalf Float
  leftCalf Float
  deltoid Float
  createAt DateTime
}

model Training {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
  exercises Exercises @relation(fields: [exercisesId], references: [id])
  exercisesId String @db.ObjectId
  data DateTime
  series Int
  repetitions Json
  weight Float
  interval Int
  createAt DateTime 
}



